{
    "apps": {
        "org.opencord.aaa": {
            "AAA": {
                "radiusConnectionType" : "socket",
                "radiusHost": "radius",
                "radiusServerPort": "1812",
                "radiusSecret": "SECRET"
              }
        },
        "org.opencord.dhcpl2relay": {
            "dhcpl2relay" : {
                "useOltUplinkForServerPktInOut": true
            }
        },
        "org.opencord.kafka": {
            "kafka": {
                "bootstrapServers": "{{ .Release.Name }}-kafka:9092"
            }
        },
        "org.opencord.sadis": {
            "sadis": {
                "integration": {
                    "url": "http://bbsim-sadis-server:58080/subscribers/%s",
                    "cache": {
                        "enabled": true,
                        "maxsize": 50,
                        "ttl": "PT1m"
                    }
                }
            },
            "bandwidthprofile": {
                "integration": {
                    "url": "http://bbsim-sadis-server:58080/profiles/%s",
                    "cache": {
                        "enabled": true,
                        "maxsize": 50,
                        "ttl": "PT1m"
                    }
                }
            }
        }
    }
}
